<?xml version="1.0"?>
<launch>

    <arg name="base_global_planner" default="global_planner/GlobalPlanner"/>
    <!-- <arg name="base_global_planner" default="navfn/NavfnROS"/> -->
    <!-- <arg name="base_local_planner" default="dwa_local_planner/DWAPlannerROS"/> -->
    <arg name="base_local_planner" default="teb_local_planner/TebLocalPlannerROS" />


    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <param name="base_global_planner" value="$(arg base_global_planner)"/>
        <param name="base_local_planner" value="$(arg base_local_planner)"/>  
        <rosparam file="$(find ucsd_f1tenth_navigation)/config/planner.yaml" command="load"/>

        <remap from="cmd_vel" to="/vehicle/cmd_vel"/>
        <remap from="odom" to="/vehicle/odom" />

        <!-- observation sources located in costmap_common.yaml -->
        <rosparam file="$(find ucsd_f1tenth_navigation)/config/costmap_common.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find ucsd_f1tenth_navigation)/config/costmap_common.yaml" command="load" ns="local_costmap" />

        <!-- local costmap -->
        <rosparam file="$(find ucsd_f1tenth_navigation)/config/costmap_local.yaml" command="load" ns="local_costmap" />

         <!-- global costmap -->
        <rosparam file="$(find ucsd_f1tenth_navigation)/config/costmap_global.yaml" command="load" ns="global_costmap" />
        <param name="global_costmap/width" value="500.0" />
        <param name="global_costmap/height" value="500.0" />

        <!-- Our carlike robot is not able to rotate in place -->
        <param name="clearing_rotation_allowed" value="false" />

    </node>

</launch>
